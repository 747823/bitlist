<div id="homepage"
  ng-controller="HomepageIndexCtrl">
  <div class="page">
    <div class="main-grid">

      <div class="row">
        <div class="col">
          <%# Main section %>
          <h1 class="title-max">Bitlist</h1>
          <h2>Local bitcoin classifieds</h2>
          <p>Buy and sell stuff locally with bitcoins</p>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="step location">
            <h2>
              Find listings within 
              <select 
                ng-model="locals.searchRadius"
                ng-options="opt.name for opt in locals.searchRadiusOptions"></select>
              miles of 
              <div style="display: inline-block;">
                <%# Location matches dropdown%>
                <div class="input-select set-location" ng-show="locationInputFocused && locals.matches">
                  <ul>
                    <li ng-repeat="each in locals.cityMatches"><a href="" ng-click="locals.setCity( each.data )">{{ each.city }}</a></li>
                  </ul>
                </div>
                <%# Actual input %>
                <input type="text" name="location" placeholder="Enter a city or ZIP code" 
                  ng-model="locals.searchLocation" 
                  ng-model-options="{ debounce: 450 }"
                  ng-change="geocode()"
                  ng-focus="locationInputFocus()"
                  ng-blur="locationInputBlur()">
              </div>
            </h2>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col center hidden-area">
          <div class="step">
            <% #Sell section %>
            <div class="category-cloud">
              <h3>Browse popular categories:</h3>
              <br>
              <a href="/listings/?category=example" class="button cat-tag">Example</a>
              <a href="/listings/?category=example" class="button cat-tag">Example</a>
              <a href="/listings/?category=example" class="button cat-tag">Example</a>
              <a href="/listings/?category=example" class="button cat-tag">Example</a>
              <a href="/listings/?category=example" class="button cat-tag">Example</a>
            </div>
            <a href="/listings/" class="button" style="margin-right: 10px;">See all listings</a>
            <a href="/listings/new" class="button">Post a new listing</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
